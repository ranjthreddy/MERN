{
  "info": {
    "name": "MERN Backend API",
    "description": "Todo and User APIs for MERN backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "todoId", "value": "" },
    { "key": "userId", "value": "" }
  ],
  "item": [
    {
      "name": "Todo",
      "item": [
        {
          "name": "Get all todos",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/todo"
          }
        },
        {
          "name": "Create todo",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"task\": \"Learn MERN stack\"\n}"
            },
            "url": "{{baseUrl}}/api/todo/create"
          }
        },
        {
          "name": "Update todo",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"task\": \"Updated task\",\n  \"completed\": true\n}"
            },
            "url": "{{baseUrl}}/api/todo/update/{{todoId}}"
          }
        },
        {
          "name": "Delete todo",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/todo/delete/{{todoId}}"
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get all users",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/user"
          }
        },
        {
          "name": "Get user by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/user/{{userId}}"
          }
        },
        {
          "name": "Create user",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\"\n}"
            },
            "url": "{{baseUrl}}/api/user/create"
          }
        },
        {
          "name": "Update user",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Doe\",\n  \"email\": \"jane@example.com\"\n}"
            },
            "url": "{{baseUrl}}/api/user/update/{{userId}}"
          }
        },
        {
          "name": "Delete user",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/user/delete/{{userId}}"
          }
        }
      ]
    }
  ]
}
